---
import StatsPanel from "@/components/stats/StatsPanel.astro";
import PageLayout from "@/layouts/Base.astro";

const meta = {
	title: "Blog Statistics",
	description: "Comprehensive statistics and analytics for this blog, including post counts, reading time, popular tags, and writing activity over time.",
};
---

<PageLayout meta={meta}>
	<div class="mb-8">
		<h1 class="title mb-4">Blog Statistics</h1>
		<p class="text-gray-600 dark:text-gray-400">
			A comprehensive overview of writing activity, popular topics, and blog metrics.
		</p>
	</div>
	
	<StatsPanel />
</PageLayout>
